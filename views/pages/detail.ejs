<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= movie.title || 'Titel Film' %> - Film Details</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="container">
    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="movie-background-container">
            <div class="movie-container">
                <img class="movie-poster" src="<%= movie.poster_path ? 'https://image.tmdb.org/t/p/w500' + movie.poster_path : '/images/placeholderposter.jpeg' %>" alt="Poster van <%= movie.title %>">
                
                <div class="movie-info">
                    <div class="movie-data">
                        <h1 class="filmNaam"><%= movie.title || 'Titel van film/acteur' %></h1>
                        <p><%= movie.release_date || 'Datum onbekend' %> | <%= movie.genres ? movie.genres.map(genre => genre.name).join(', ') : 'Genres onbekend' %> | <%= movie.runtime ? movie.runtime + ' min' : 'Duur onbekend' %></p>
                    </div>

                    <div class="description">
                        <h2>Omschrijving</h2>
                        <p><%= movie.overview || 'Geen omschrijving beschikbaar.' %></p>
                    </div>

                    <div class="cast">
                        <h2>Cast</h2>
                        <ul>
                            <% if (cast && cast.length > 0) { %>
                                <% cast.slice(0, 10).forEach(actor => { %>
                                    <li><%= actor.name %> als <%= actor.character %></li>
                                <% }); %>
                            <% } else { %>
                                <p>Geen castinformatie beschikbaar.</p>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>


    <main>
      <div class="movie-detail">
        <img
          src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>"
          alt="<%= movie.title %>"
        />
        <h1><%= movie.title %></h1>
        <p>‚≠ê Rating: <%= movie.vote_average %>/10</p>
        <p><%= movie.overview %></p>
        <p>Release Date: <%= movie.release_date %></p>
        <p>Runtime: <%= movie.runtime %> minutes</p>
        <p>Genres: <%= movie.genres.map(genre => genre.name).join(', ') %></p>
        <h2>Cast</h2>
        <% if (cast && cast.length > 0) { %>
        <ul>
          <% cast.forEach(actor => { %>
          <li>
            <% if (actor.profile_path) { %>
            <img
              src="https://image.tmdb.org/t/p/w200<%= actor.profile_path %>"
              alt="<%= actor.name %>"
              onerror="this.onerror=null;this.src='/images/base.jpg';"
            />
            <% } else { %>
            <img src="/images/base.jpg" alt="<%= actor.name %>" />
            <% } %> <%= actor.name %> as <%= actor.character %>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p>No cast information available.</p>
        <% } %>
      </div>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
